<head>
<link rel="stylesheet" type="text/css" href="rateit.css">

<script type="text/javascript" src="jquery.raty.js"></script>
</head>

 <h1> Web Development Bootcamps </h1>



<table>
  <thead>
    <tr>
      <th>Bootcamp</th>
      <th>Rating</th>
      <th><strong>Name</strong></th>
      <th>Location</th>
      <th>Focus</th>
      <th>Length</th>
      <th>Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @counter = 1 %>
    <% @schools.each do |school| %>
      <tr>
        <td><div style = "text-align: center"><img width='50' height='50' src= <%= school.picture_url %>/></div></td>
        <td><div class="rateit" data-rateit-value='<%= school.average_rating(@counter) %>' data-rateit-ispreset="true" data-rateit-readonly="true"></div></td>
        <td><%= link_to "#{school.name}", school %></td>
        <td><%= school.location %></td>
        <td><%= school.focus %></td>
        <td><%= school.length %></td>
        <td>$<%= number_with_delimiter(school.cost, :delimiter => ',') %></td>
      </tr>
      <% @counter += 1 %>
    <% end %>
  </tbody>
</table>
<br />